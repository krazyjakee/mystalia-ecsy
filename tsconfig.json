{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
