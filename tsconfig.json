{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2019", "DOM"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "types"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@client/*": ["src/client/*"],
      "@server/*": ["src/server/*"],
      "types/*": ["src/types/*"],
      "utilities/*": ["src/utilities/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.stories.*"]
}
